<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/picture"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Решатель уравнений"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Введите коэффициент а:"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"/>

        <EditText
            android:layout_gravity="center_horizontal"
            android:id="@+id/edit_text_a"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Ввод"
            android:inputType="numberDecimal|numberSigned"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="25sp"
            tools:text="Ввод" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Введите коэффициент b:"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <EditText
            android:layout_gravity="center_horizontal"
            android:id="@+id/edit_text_b"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Ввод"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="25sp" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Введите коэффициент c:"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <EditText
            android:layout_gravity="center_horizontal"
            android:id="@+id/edit_text_c"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Ввод"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="25sp" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Ответ:"
            android:textColor="@color/black"
            android:textSize="25sp" />

    <TextView
        android:id="@+id/text_view_x1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:text="1.55" />
    <TextView
        android:id="@+id/text_view_x2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:text="1.55" />

    <Button
        android:id="@+id/button_click"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:backgroundTint="#5F197C"
        android:onClick="click"
        android:text="Показать корни уравнения" />


</LinearLayout>